<h1>Add Post</h1>

<%= form_for :post, url: posts_path do |form| %>
    <p>
        <%= form.label :title %><br>
        <%= form.text_field :title %>
    </p>

    <p>
        <%= form.label :body %><br>
        <%= form.text_field :body %>
    </p>

    <p>
        <%= form.submit %>
    </p>
<% end %>